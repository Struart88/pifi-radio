<div class="container-fluid">


<!-- Player -->
<div class="pagination-centered align-self-center" id="player">
<h5 class="text-center" id="status"><%= status %></h5>
<h2 class="text-center" id="name"><%= name %></h2>

<div class="text-center" id="controls" role="toolbar">
<a href="#">
    <span class="btn btn-default btn-lg btn-controls" id="play">
    <span class="glyphicon glyphicon-play"></span></span></a>
<a href="#">
    <span class="btn btn-default btn-lg btn-controls" id="stop">
    <span class="glyphicon glyphicon-stop"></span></span></a>
<a href="#">
    <span class="btn btn-default btn-lg btn-controls" id="vdown">
    <span class="glyphicon glyphicon-volume-down"></span></span></a>
<a href="#">
    <span class="btn btn-default btn-lg btn-controls" id="vup">
    <span class="glyphicon glyphicon-volume-up"></span></span></a>
<p class="text-right" id="vol"><%= volume %></p>
</div>


<p class="button-end text-center">
<a href="#">
    <span class="btn btn-danger btn-lg btn-left" id="btn-random"><span class="glyphicon glyphicon-music"></span></span></a>
<a href="#">
    <span class="btn btn-primary btn-lg btn-right" id="btn-radios"><span class="glyphicon glyphicon-list"></span> Rádios</span></a>
</p>
</div>


<!-- Lista de rádios -->
<div class="pagination-centered align-self-center" id="radios">
<h4 class="text-center" id="silence">Que silêncio...</h4>
<h4 class="title text-center lead">Escolha uma rádio</h4>

<% $streams.each do |key, value| %>
    <a href="#"><div class="radio-name" url="<%= URI.escape(value) %>"><h4><%= key %></h4></div></a>
<% end %>
<a href="#" ><div id="insert"><h4 class="text-muted">Inserir endereço...</h4></div></a>

<p class="button-end text-center">
<a href="#"><span class="btn btn-primary btn-lg" id="btn-player"><span class="glyphicon glyphicon-th"></span> Mostrar controles</span></a>
</p>
</div>


<!-- Para exibição de alertas -->
<div class="pagination-centered align-self-center" id="alert">
    <h2 class="text-center" id="alert-text"></h2>
</div>


</div>
