<div class="container-fluid">


<!-- Player -->
<div class="pagination-centered align-self-center" id="player">
<h4 class="text-center" id="status">Carregando...</h5>
<h2 class="text-center" id="name">Carregando...</h2>

<div class="text-center" id="controls" role="toolbar">
<a href="#">
    <button type="button" class="btn btn-default btn-lg btn-controls" id="play">
    <span class="glyphicon glyphicon-play"></span></button></a>
<a href="#">
    <button type="button" class="btn btn-default btn-lg btn-controls" id="stop">
    <span class="glyphicon glyphicon-stop"></span></button></a>
<a href="#">
    <button type="button" class="btn btn-default btn-lg btn-controls" id="vdown">
    <span class="glyphicon glyphicon-volume-down"></span></button></a>
<a href="#">
    <button type="button" class="btn btn-default btn-lg btn-controls" id="vup">
    <span class="glyphicon glyphicon-volume-up"></span></button></a>
</div>


<div class="text-center" id="player-bottom">
<a href="#">
    <button type="button" class="btn btn-danger btn-lg btn-left" id="btn-random">
    <span class="glyphicon glyphicon-music"></span></button></a>
<a href="#">
    <button type="button" class="btn btn-primary btn-lg btn-right" id="btn-radios">
    <span class="glyphicon glyphicon-list"></span> Rádios</button></a>
</div>

<!-- Volume OSD -->
<div class="pagination-centered align-self-center" id="osd">
    <h2 class="text-center text-info" id="osd-text"></h2>
</div>
</div>


<!-- Lista de rádios -->
<div class="pagination-centered align-self-center" id="radios">
<h4 class="text-center" id="silence"><em>Que silêncio...</em></h4>
<h4 class="title text-center"><strong>Escolha uma rádio</strong></h4>

<ul class="list-group" id="radios-list">
    <% $streams.each do |key, value| %>
        <a href="#">
        <li class="list-group-item radio-name" url="<%= URI.escape(value) %>">
        <h4><%= key %></h4></li></a>
    <% end %>
    <a href="#" >
    <li class="list-group-item" id="insert">
    <h4 class="text-muted">Inserir endereço...</h4></li></a>
</ul>
<p class="button-end text-center">
<a href="#">
    <button type="button" class="btn btn-primary btn-lg" id="btn-player">
    <span class="glyphicon glyphicon-th"></span> Mostrar controles</button></a>
</p>
</div>


<!-- Para exibição de alertas -->
<div class="pagination-centered align-self-center" id="alert">
    <h2 class="text-center text-info" id="alert-text"></h2>
</div>

</div>
